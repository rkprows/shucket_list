<h2>Lists</h2>

<% if @lists.any? %>
  <ul>
    <% @lists.each do |list| %>
      <li><%= link_to list.name, list_path(list) %>
      </li>
      <% end %>
  </ul>
<% else %>
  <h3>No Lists, please add one!</h3>
<% end %>

<%= link_to 'Profile', edit_user_registration_path %>

<%= link_to 'Add List', lists_new_path %>
