<h1>List</h1>
<p>Title: <%= @list.title %></p>
<p>Description: <%= @list.description %></p>
<p>Category: <%= @list.category %></p>


<%if @list.items.any? %>
  <h3>Incomplete Items:</h3>
    <% if @incomplete.any? %>
      <% @incomplete.each do |item| %>
        <ul>
          <li>
            <%= link_to item.name, list_item_path(@list, item) %><br>
          	<%= image_tag item.image.url(:medium) %>
          </li>
       </ul>
      <% end %>
    <% else %>
      <h5>Please add something!</h5>
    <% end %>

  <h3>Completed Items:</h3>
    <% if @complete.any? %>
      <% @complete.each do |item| %>
        <ul>
          <li>
            <%= link_to item.name, list_item_path(@list, item) %><br>
            <%= image_tag item.image.url(:medium) %>
          </li>
        </ul>
      <% end %>
    <% else %>
      <h5>Nothing, get out there and do something!</h5>
    <% end %>

<% else %>
  <h3>Please add something!</h3>
<% end %>

<hr>

<%= link_to 'Add Item', new_list_item_path(@list, @item) %> |

<%= link_to 'Edit List', edit_list_path(@list) %> |

<%= link_to 'Delete List', list_path, method: :delete, data: {confirm: 'You sure you want to delete?'} %>

<br>
<br>

<%= link_to 'All Lists', lists_path %>