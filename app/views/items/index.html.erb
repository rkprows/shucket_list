<h1><%= list.name %> items: </h1>
<hr />

<% if @items.any? %>
	<ul>
		<% @items.each do |item| %>
			<li>
				<%= link_to item.name, item_path(item) %>
			</li>
			<% end %>
	</ul>
<% else %>
	<h3>This list doesn't have any items!</h3>
<% end %>

<hr />
<%= link_to 'Add Item', new_item_path %>
<%= link_to 'All Shucket Lists', lists_path %>