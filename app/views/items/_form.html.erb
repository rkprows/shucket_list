
  <%= form_for [@list, @item], :html => { :multipart => true } do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :image %>
  <%= f.file_field :image %>

  <% if @item.persisted? %>
    <%= f.label :complete %>
    <%= f.check_box :complete %>
  <% end %>

  <%= f.submit %>
<% end %>

  