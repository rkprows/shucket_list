
  <%= form_for [@list, @item], :class => "form-group", :html => { :multipart => true } do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name, class:"form-control" %>
  
      <%= f.label :description %>
      <%= f.text_field :description, class:"form-control" %>

      <%= f.label :image %>
      <%= f.file_field :image %>

    <% if @item.persisted? %>
      <%= f.label :complete %>
      <%= f.check_box :complete %>
    <% end %>
  
    <%= f.submit class:"btn btn-primary" %>
  <% end %> 

